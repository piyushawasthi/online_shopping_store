<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% order.line_items.each do |item| %>
    <tr>
      <td><%= image_tag item.product.avatar.url(:thumb), class:"img-responsive img-thumbnail" %></td>
      <td><%= item.product.name %></td>
      <td><%= item.quantity %></td>
      <td><%= number_to_currency item.price %></td>
      <td><%= number_to_currency item.total %></td>

      <td><%= link_to fa_icon('trash', text: "delete"), user_line_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>Order Subtotal: <%= number_to_currency order.subtotal %></h3>
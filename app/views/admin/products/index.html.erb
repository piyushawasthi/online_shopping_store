<h1>Products</h1>
<%= link_to fa_icon('plus', text: "Add New Product"), new_admin_product_path, class:"btn btn-info pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Current price</th>
      <th>Quantity</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.avatar.url(:thumb) %></td>
      <td><%= product.name %></td>
      <td><%= number_to_currency product.current_price %></td>
      <td><%= product.quantity %></td>
      <td><%= product.brand.try(:name) %></td>
      <td><%= product.category.name.titleize %></td>
      <td><%= link_to fa_icon('eye', text: "view"), admin_product_path(product) %></td>
      <td><%= link_to fa_icon('pencil', text: "edit"), edit_admin_product_path(product) %></td>
      <td><%= link_to fa_icon('trash', text: "delete"), admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>Brands</h1>
<%= link_to fa_icon('plus', text: "Add New Brand"), new_admin_brand_path, class:"btn btn-info pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to fa_icon('eye', text: "view"), admin_brand_path(brand) %></td>
        <td><%= link_to fa_icon('pencil', text:"edit"), edit_admin_brand_path(brand) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


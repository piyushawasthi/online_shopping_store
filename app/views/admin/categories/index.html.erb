

<h1>Categories</h1>
<%= link_to fa_icon('plus', text: "Add New Category"), new_admin_category_path, class:"btn btn-info pull-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name.titleize %></td>
        <td><%= link_to fa_icon('eye', text: "view"), admin_category_path(category) %></td>
        <td><%= link_to  fa_icon('pencil', text: "edit"), edit_admin_category_path(category) %></td>
        <td><%= link_to fa_icon('trash', text: "delete"), admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

